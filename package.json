{
  "name": "@so2liu/pty-mcp-server",
  "version": "1.0.4",
  "description": "MCP server for debugging PTY/TTY/TUI programs. Enables Claude Code to control Claude Code, vim, and other TUI apps.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pty-mcp-server": "dist/index.js",
    "so2liu-pty-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "pty",
    "tty",
    "tui",
    "terminal",
    "claude",
    "claude-code",
    "vim",
    "debug",
    "anthropic"
  ],
  "author": "so2liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/so2liu/pty-mcp.git"
  },
  "homepage": "https://github.com/so2liu/pty-mcp#readme",
  "bugs": {
    "url": "https://github.com/so2liu/pty-mcp/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "http": "tsx src/http-server.ts",
    "http:start": "node dist/http-server.js",
    "lint": "eslint src"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@xterm/headless": "^5.5.0",
    "@xterm/addon-serialize": "^0.13.0",
    "node-pty": "^1.0.0",
    "uuid": "^11.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
